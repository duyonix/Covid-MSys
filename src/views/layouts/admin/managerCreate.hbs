<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap Layout -->
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <!-- JavaScript Bundle with Popper for Bootstrap-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>

    <!-- Font Awesome -->
    <script src="https://kit.fontawesome.com/5e369d8acd.js" crossorigin="anonymous"></script>

    <!-- Google font  -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Changa+One:ital@0;1&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/manager-create.css">

    <title>Account manage</title>
</head>

<body>
    <div class="main">
        <div class="sidebar">
            <div class="app-logo">
                <img src="https://i.ibb.co/6Nnf81X/logo-3.png" alt="app-logo">
                <h4>PC-COVID19</h4>
            </div>
            <div class="tabs">
                <div class="main-tab">
                    <a href="#">
                        <div class="item active">
                            <i class="fa-solid fa-user-plus"></i>
                            <span>Tạo tài khoản</span>
                        </div>
                    </a>
                    <a href="#">
                        <div class="item">
                            <i class="fa-solid fa-people-roof"></i>
                            <span>Quản lý tài khoản</span>
                        </div>
                    </a>
                    <a href="#">
                        <div class="item">
                            <i class="fa-solid fa-list-check fa-lg"></i>
                            <span>Quản lý cơ sở</span>
                        </div>
                    </a>
                </div>
                <div class="account-tab">
                    <a href="#">
                        <div class="item">
                            <i class="fa-solid fa-gear"></i>
                            <span>Setting</span>
                        </div>
                    </a>
                    <a href="#">
                        <div class="item">
                            <i class="fa-solid fa-hand-holding-medical"></i>
                            <span>Subscription</span>
                        </div>
                    </a>
                </div>
            </div>
        </div>
        <div class="content-container">
            <div class="head-bar">
                <div class="search-bar">
                    <button class="btn-search" type="button">
                        <i class="fa-solid fa-magnifying-glass"></i>
                    </button>
                    <input type="text" id="search" placeholder="Search">
                </div>
                <div class="account-info ">
                    <i class="fa-solid fa-bell"></i>
                    <span>Hoàng Vũ</span>
                    <div class="dropdown">
                        <input type="checkbox" class="dropcheck" id="dropcheck">
                        <label for="dropcheck" class="dropbtn"><img
                                src="https://www.pngkey.com/png/full/114-1149878_setting-user-avatar-in-specific-size-without-breaking.png"
                                alt="avatar" width="20px"></label>
                        <!-- <button class="dropbtn">
                            <img src="https://www.pngkey.com/png/full/114-1149878_setting-user-avatar-in-specific-size-without-breaking.png"
                                alt="avatar" width="20px">
                        </button> -->
                        <div class="dropdown-content">
                            <a href="#">Thông tin tài khoản</a>
                            <a href="#">Đăng xuất</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-container">
                <h2>Thêm tài khoản quản lý</h2>
                <form action="" method="post" id="create-form">
                    <label for="username">Username</label>
                    <div class="input-field username">
                        <div class="icon">
                            <i class="fa-solid fa-circle-user"></i>
                        </div>
                        <input type="text" id="username" name="username" placeholder="Enter username" required>
                    </div>
                    <label for="password">Password</label>
                    <div class="input-field password">
                        <div class="icon">
                            <i class="fa-solid fa-lock"></i>
                        </div>
                        <input type="password" id="password" name="password" placeholder="Enter password" required>
                    </div>
                    <label for="confirm-password">Password</label>
                    <div class="input-field confirm-password">
                        <div class="icon">
                            <i class="fa-solid fa-lock"></i>
                        </div>
                        <input type="password" id="confirm-password" name="confirm-password"
                            placeholder="Confirm your password" required>
                    </div>
                    <button type="button" class="btn create-account" data-bs-toggle="modal"
                        data-bs-target="#permission-popup" id="create-account" disabled>Tạo tài khoản quản lý</button>
                </form>
                <!-- Modal -->
                <div class="modal fade rounded-pill p-3" id="permission-popup" tabindex="-1"
                    aria-labelledby="permission-popupLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title text-center" id="permission-popupLabel">Cập nhật quyền cho
                                    tài khoản
                                </h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" data-bs-toggle="modal"
                                    aria-label="Close" data-bs-target="#mess-failed"></button>
                            </div>
                            <div class="modal-body py-4">
                                <div class="title">
                                    <h4 class="text-center">Danh sách các quyền hạn của người quản lý</h4>
                                </div>
                                <div class="permission-content my-4 me-4">
                                    <div class="form-check form-switch">
                                        <label class="form-check-label float-start" for="p1">Quản lý danh sách
                                            người liên quan Covid-19</label>
                                        <input class="form-check-input float-end" type="checkbox" id="p1">
                                    </div>
                                    <div class="form-check form-switch">
                                        <label class="form-check-label float-start" for="p2">Thêm người liên quan
                                            Covid-19 vào hệ thống</label>
                                        <input class="form-check-input float-end" type="checkbox" id="p2">
                                    </div>
                                    <div class="form-check form-switch">
                                        <label class="form-check-label float-start" for="p3">Thay đổi trạng thái
                                            người liên quan Covid-19</label>
                                        <input class="form-check-input float-end" type="checkbox" id="p3">
                                    </div>
                                    <div class="form-check form-switch">
                                        <label class="form-check-label float-start" for="p4">Quản lý các sản phẩm
                                            nhu yếu phẩm</label>
                                        <input class="form-check-input float-end" type="checkbox" id="p4">
                                    </div>
                                    <div class="form-check form-switch">
                                        <label class="form-check-label float-start" for="p5">Quản lý các gói Nhu yếu
                                            phẩm</label>
                                        <input class="form-check-input float-end" type="checkbox" id="p5">
                                    </div>
                                    <div class="form-check form-switch">
                                        <label class="form-check-label float-start" for="p6">Thống kê thông tin
                                        </label>
                                        <input class="form-check-input float-end" type="checkbox" id="p6">
                                    </div>
                                    <div class="form-check form-switch">
                                        <label class="form-check-label float-start" for="p7">Quản lý Thanh
                                            toán</label>
                                        <input class="form-check-input float-end" type="checkbox" id="p7">
                                    </div>
                                    <div class="form-check form-switch my-3">
                                        <label class="form-check-label float-start" for="p8"><b>Chọn tất
                                                cả</b></label>
                                        <input class="form-check-input float-end" type="checkbox" id="p8">
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <input type="submit" id="cancel" value="Cancel" class="btn cancel"
                                    data-bs-dismiss="modal">
                                <input type="submit" id="update" value="Update" class="btn update"
                                    data-bs-dismiss="modal">
                            </div>
                        </div>
                    </div>
                </div>

                <div id="snackbar"></div>
            </div>
        </div>
    </div>
    </div>
    <!-- Javascript module -->
    <script>
        function accountValidate() {
            var username = document.getElementById('username');
            var pass1 = document.getElementById('password');
            var pass2 = document.getElementById('confirm-password');
            var button = document.getElementById("create-account");

            var form = document.getElementById("create-form");

            form.addEventListener("change", () => {
                if (username.value != "" && pass1.value != "" && pass1.value === pass2.value) {
                    button.disabled = false;
                }
                else {
                    button.disabled = true;
                }
            })

            var checkAll = document.getElementById("p8");

            checkAll.addEventListener("change", () => {
                if (checkAll.checked == true) {
                    let permissions = document.querySelectorAll(".form-check-input.float-end");
                    permissions.forEach(element => {
                        element.checked = true;
                    });
                }
                else {
                    let permissions = document.querySelectorAll(".form-check-input.float-end");
                    permissions.forEach(element => {
                        element.checked = false;
                    });
                }
            });

            function showToast() {
                var x = document.getElementById("snackbar");
                x.className = "show";
                setTimeout(() => {
                    x.className = x.className.replace("show", "");
                }, 3000);
            }

            var update = document.getElementById("update");
            var cancel = document.getElementById("cancel");

            update.addEventListener("click", () => {
                document.getElementById("snackbar").innerHTML = "Thêm tài khoản quản lý thành công";
                document.getElementById("snackbar").style.color = "#008000";
                showToast();
            });
        }

        accountValidate();
    </script>
</body>

</html>